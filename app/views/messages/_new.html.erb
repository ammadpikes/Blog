<%= form_for [@conversation, @message] do |f| %>
  <div class="field">
    <%= f.text_area :message_body, class: "form-control", size: "3x6" %>
  </div>
    <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
  <div>
    <br>
    <%= f.submit "Add Reply", class: "btn btn-primary" %>
  </div>
<% end %>